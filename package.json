{
  "name": "parse-text-search",
  "version": "1.0.0",
  "description": "A Javascript API with utils for searching on your Parse server",
  "main": "out/index.js",
  "types": "out/index.d.ts",
  "scripts": {
    "test": "jest --ci --silent",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "tsc"
  },
  "keywords": [],
  "author": "Juan Camilo Guar√≠n P",
  "license": "MIT",
  "peerDependencies": {
    "@owsas/parse-service": "^1.0.1",
    "parse": "^1.11.1"
  },
  "devDependencies": {
    "@owsas/parse-service": "^1.0.1",
    "@types/jest": "^21.1.4",
    "@types/parse": "^1.11.0",
    "dotenv": "^5.0.1",
    "jest": "^21.2.1",
    "parse": "^1.11.1",
    "ts-jest": "^21.1.3",
    "ts-node": "^6.0.3",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.3.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
