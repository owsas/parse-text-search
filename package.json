    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/out"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owsas/parse-text-search"
  },
